{
	"type": "object",
	"title": "Projekty",
	"description": "Seznam projektů",
	"options": {
		"collapsed": true
	},
	"properties": {
		"projects": {
			"options": {
				"titleHidden": true,
				"disable_collapse": true
			},
			"type": "array",
			"items": {
				"type": "object",
				"description": "Nastavení projektu",
				"title": "Projekt",
				"headerTemplate": "{{self.label}}",
				"options": {
					"collapsed": true
				},
				"properties": {
					"homepage": {
						"options": {
							"collapsed": true
						},
						"type": [
							"object",
							"null"
						],
						"description": "Nastavení zobrazení na domovské stránce. Vyberte 'Object' pro zobrazení na domovské stránce",
						"properties": {
							"index": {
								"type": "integer",
								"description": "Pořadí v carouselu"
							},
							"image": {
								"type": "string",
								"title": "obrázek v carouselu na homepage",
								"media": {
									"binaryEncoding": "base64",
									"type": "img/png"
								}
							},
							"text": {
								"type": "string",
								"description": "První řádek textu"
							},
							"description": {
								"type": "string",
								"description": "Druhý řádek textu"
							},
							"textColor": {
								"type": "string",
								"format": "color",
								"description": "Barva textů na domovské stránce při tomto projektu"
							}
						},
						"required": [
							"index",
							"image",
							"text",
							"textColor"
						]
					},
					"id": {
						"type": "string",
						"format": "text",
						"description": "ID projektu, unikátní, bez diakritiky, mezer a velkých písmen"
					},
					"label": {
						"type": "string",
						"description": "Nadpis v detailu projektu"
					},
					"description": {
						"type": "string",
						"format": "textarea",
						"description": "popis projektu v detailu projektu",
						"options": {
							"expand_height": true
						}
					},
					"thumbnail": {
						"type": "string",
						"title": "thumbnail na kartě projektu",
						"media": {
							"binaryEncoding": "base64",
							"type": "img/png"
						}
					},
					"images": {
						"type": "array",
						"title": "galerie v datilu projektu, 'array' pro vybrání dvou/tří obrázků na řádek",
						"options": {
							"collapsed": true
						},
						"items": {
							"title": "Obrázek/Obrázky",
							"anyOf": [
								{
									"type": "array",
									"options": {
										"collapsed": true
									},
									"minItems": 2,
									"maxItems": 3,
									"description": "dva nebo tři obrázky na řádek",
									"items": {
										"type": "string",
										"title": "obrázek",
										"media": {
											"binaryEncoding": "base64",
											"type": "img/png"
										}
									}
								},
								{
									"type": "string",
									"title": "fotka",
									"media": {
										"binaryEncoding": "base64",
										"type": "img/png"
									}
								}
							]
						}
					},
					"filters": {
						"type": "array",
						"format": "select",
						"description": "Filtry pro filtrování na stránce Work",
						"items": {
							"$ref": "./dynamic/jsons/data/filters.json#/definitions/filterEnums/items"
						}
					},
					"visible": {
						"type": "boolean",
						"format": "checkbox",
						"default": true,
						"title": "viditelná",
						"description": "zobrazuje se na seznamu referencí"
					}
				},
				"required": [
					"id",
					"label",
					"description",
					"thumbnail",
					"filters",
					"visible"
				]
			}
		}
	}
}